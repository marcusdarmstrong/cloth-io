{
  "extends": "airbnb",
  "plugins": ["import", "jsx-a11y", "flowtype"],
  "parser": "babel-eslint",
  "rules": {
    "no-console": 0,
    "flowtype/space-after-type-colon": [
      2,
      "always"
    ],
    "flowtype/space-before-type-colon": [
      2,
      "never"
    ],
    "flowtype/type-id-match": [
      2,
      "^([A-Z][a-z0-9]+)+$"
    ]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}